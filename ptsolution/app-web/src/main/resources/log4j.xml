<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/app-web.log" />
		<param name="Append" value="true" />
		<!-- Rollover at midnight each day -->
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MMM-dd HH:mm:ss,SSS} %-5p [%c{1}][%M][%L] %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>

	<logger name="org.hibernate.SQL">
		<level value="debug" />
	</logger>

	<!-- Application Loggers -->
	<logger name="com.datawings">
		<level value="info" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org">
		<level value="info" />
	</logger>

<!-- 	<logger name="com.querydsl.jpa.impl.JPAQuery"> -->
<!-- 		<level value="debug"/> -->
<!-- 	</logger> -->
<!-- 	<logger name="org.hibernate.dialect.function.TemplateRenderer"> -->
<!-- 		<level value="error"/> -->
<!-- 	</logger> -->

<!-- 	<logger name="org.springframework.security.access.hierarchicalroles"> -->
<!-- 		<level value="debug"/> -->
<!-- 	</logger> -->
<!--  -->
	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>